{
  "name": "btrc",
  "displayName": "btrc Language",
  "description": "Language support for btrc â€” a language that transpiles to C",
  "version": "0.1.0",
  "publisher": "btrc-dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:btrc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "btrc",
        "aliases": [
          "btrc",
          "BTRC"
        ],
        "extensions": [
          ".btrc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "btrc",
        "scopeName": "source.btrc",
        "path": "./syntaxes/btrc.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "btrc",
      "properties": {
        "btrc.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python 3 interpreter for the btrc language server"
        },
        "btrc.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the btrc language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --out btrc.vsix",
    "install-ext": "npm run package && code --install-extension btrc.vsix --force"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
