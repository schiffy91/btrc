#include <assert.h>

bool isEven(int x) { return x % 2 == 0; }
bool isNeg(int x) { return x < 0; }

int main() {
    Vector<int> a = [1, 3, 4, 7, 8];
    int idx = a.findIndex(isEven);
    assert(idx == 2);

    // findIndex not found
    Vector<int> b = [1, 2, 3];
    int idx2 = b.findIndex(isNeg);
    assert(idx2 == -1);

    a.free();
    b.free();

    print("PASS: test_list_findIndex");
    return 0;
}
