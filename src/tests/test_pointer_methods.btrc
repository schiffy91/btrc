#include <assert.h>

class Bag {
    public List<int> items = [];

    public void add(int x) {
        self.items.push(x);
    }

    public int count() {
        return self.items.len;
    }
}

class Point {
    public int x = 0;
    public int y = 0;

    public void set(int nx, int ny) {
        self.x = nx;
        self.y = ny;
    }
}

class Store {
    public Map<string, int> inventory = {};

    public void stock(string item, int qty) {
        self.inventory.put(item, qty);
    }
}

int main() {
    // Pointer method call
    Bag b = new Bag();
    b.add(10);
    b.add(20);
    b.add(30);
    assert(b.count() == 3);

    // Pointer field access
    Point p = new Point();
    p.set(10, 20);
    assert(p.x + p.y == 30);

    // Pointer map field
    Store s = new Store();
    s.stock("apples", 50);
    s.stock("bananas", 30);
    assert(s.inventory.len == 2);

    print("PASS: test_pointer_methods");
    return 0;
}
