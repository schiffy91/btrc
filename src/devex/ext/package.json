{
  "name": "btrc",
  "displayName": "btrc Language",
  "description": "Language support for btrc â€” a language that transpiles to C",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "btrc-dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "icons/btrc.png",
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "btrc",
        "aliases": [
          "btrc",
          "BTRC"
        ],
        "extensions": [
          ".btrc"
        ],
        "icon": {
          "light": "./icons/btrc.png",
          "dark": "./icons/btrc.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "btrc",
        "scopeName": "source.btrc",
        "path": "./syntaxes/btrc.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "btrc",
      "properties": {
        "btrc.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python 3 interpreter for the btrc language server"
        },
        "btrc.serverPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the btrc LSP server script (server.py). When set, the extension uses this directly instead of searching for it."
        },
        "btrc.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the btrc language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run esbuild-base",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "package": "vsce package --out btrc.vsix --allow-missing-repository",
    "install-ext": "npm run package && code --install-extension btrc.vsix --force"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.0"
  }
}
