enum ExitCode {
    EXIT_OK = 0,
    EXIT_ERROR = 1,
    EXIT_USAGE = 2
};

class Console {
    class void error(string msg) {
        fprintf(stderr, "%s\n", msg);
    }

    class void errorAt(string msg, string file, int line, int col) {
        fprintf(stderr, "%s at %s:%d:%d\n", msg, file, line, col);
    }
}
